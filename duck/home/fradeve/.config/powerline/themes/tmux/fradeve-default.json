{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"uptime": {
			"before": " ",
			"args": {
                "shorten_len": 2
            }
		},
		"external_ip": {
			"before": "ⓦ  "
		},
		"date": {
			"before": "⌚ "
		},
		"email_imap_alert": {
			"before": "✉ ",
			"args": {
                "server" : "mail.google.com",
				"username": "francesco.devirgilio@polestarglobal.com",
				"password": ""
			}
		}
	},
	"segments": {
		"right": [
            {
                "function": "powerline.segments.common.players.mpd",
                "name": "player",
                "args": {
                    "host":   "moon.redirectme.net",
                    "port":   "6600",
                    "format": "{state_symbol} {artist} • {album} • {title}"
                },
                "exclude_modes": ["nc"],
                "priority": 30
            },
			{
                "function": "powerline.segments.common.wthr.weather",
				"priority": 40,
				"args": {
                    "unit" : "C",
					"location_query": "Wimbledon, UK"
				}
			},
			{
                "function": "powerline.segments.common.mail.email_imap_alert",
				"priority": 50
			},
			{
                "function": "powerline.segments.common.sys.uptime",
				"priority": 50
			},
			{
                "function": "powerline.segments.common.net.hostname",
				"name": "hostname"
			}
		]
	}
}
