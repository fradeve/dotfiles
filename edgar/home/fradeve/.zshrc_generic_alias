### alias ###
#############

## networking
alias pong='ping www.google.it' 

## mail
alias mutt='mutt -n -F /home/fradeve/.mutt/muttrc'
alias mutton='mutt -n -F /home/fradeve/.mutt/muttonrc'

## git
eval "$(hub alias -s)"

alias git="hub"
alias gpf="git fetch -p"
gdf() { 
    if [[ ! $1 ]]; then
        local branch="master"
    fi
    cdiff -s -w90 $branch; 
}

## tmux
alias base='tmuxp load base'

## taskwarrior
alias ta='task general'                 # show 'general' report
alias tt='task general +OVERDUE'        # general tasks to be done today, plus overdue
alias tc='task general-completetoday'   # general tasks done today
alias ts='task sync'

# misc tools
alias ww='curl wttr.in/london'
