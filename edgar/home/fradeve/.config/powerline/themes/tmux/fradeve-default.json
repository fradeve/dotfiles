{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"uptime": {
			"before": " ",
			"args": {
                "shorten_len": 2
            }
		},
		"external_ip": {
			"before": "ⓦ  "
		},
		"date": {
			"before": "⌚ "
		},
		"email_imap_alert": {
			"before": "✉ ",
			"args": {
                "server" : "mail.autistici.org",
				"username": "",
				"password": ""
			}
		}
	},
	"segments": {
		"right": [
            {"name": "now_playing",
                "module": "powerline.segments.common",
                "args": {
                    "player": "mpd",
                    "host":   "127.0.0.1",
                    "port":   "6600",
                    "format": "{state_symbol} {artist} • {album} • {title}"
                },
                "exclude_modes": ["nc"],
                "priority": 30
            },
			{
				"name": "weather",
				"priority": 40,
				"args": {
                    "unit" : "C",
					"location_query": "Wimbledon, UK"
				}
			},
			{
				"name": "email_imap_alert",
				"priority": 50
			},
			{
				"name": "uptime",
				"priority": 50
			},
			{
				"name": "hostname"
			}
		]
	}
}
