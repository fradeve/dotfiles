{
  "module": "powerline.segments.common",
  "segments": {
    "right": [
      {
        "function": "powerline.segments.common.players.mpd",
        "name": "player",
        "args": {
          "host": "moon.ydns.eu",
          "port": "6600",
          "format": "{state_symbol} {artist} \u2022 {album} \u2022 {title}"
        },
        "exclude_modes": [
          "nc"
        ],
        "priority": 30
      },
      {
        "function": "powerline.segments.common.mail.email_imap_alert"
      },
      {
        "function": "powerline.segments.common.wthr.weather",
        "priority": 40,
        "args": {
          "unit": "C",
          "location_query": "london, united kingdom"
        }
      },
      {
        "function": "powerline.segments.common.sys.uptime"
      },
      {
        "function": "powerline.segments.common.bat.battery"
      }
    ],
    "left": [
      {
        "function": "powerline.segments.common.net.hostname",
        "name": "hostname"
      }
    ]
  },
  "segment_data": {
    "uptime": {
      "args": {
        "shorten_len": 1
      }
    },
    "email_imap_alert": {
      "args": {
        "server": "mail.autistici.org",
        "username": "francesco.devirgilio@inventati.org",
        "password": ""
      }
    },
    "date": {
      "args": {
        "format": "%Y-%m-%d %H:%M"
      }
    }
  }
}
