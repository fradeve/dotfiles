# xbacklight and kbdlight (AUR) needed

"mpc volume +5"
  XF86AudioRaiseVolume

"mpc volume -5"
  XF86AudioLowerVolume

"mpc volume 0"
  XF86AudioMute

"mpc toggle"
  XF86AudioPlay

"mpc prev"
  XF86AudioPrev

"mpc next"
  XF86AudioNext

"xbacklight -dec 10"
  XF86MonBrightnessDown

"xbacklight -inc 10"
  XF86MonBrightnessUp

"kbdlight up"
  XF86KbdBrightnessUp

"kbdlight down"
  XF86KbdBrightnessDown

"sh /home/fradeve/.bin/single.screenlayout.sh"
  F7

"sh /home/fradeve/.bin/multiple.screenlayout.sh"
  F8
