#### reports ####
#################

report.general.columns=id,due,due.countdown,start,priority,depends,description
report.general.labels=ID,Due,Remaining,Start,Pri,Dep,Desc
report.general.filter=project.not:tech tag.not:polestar tag.not:longterm status:pending
report.general.sort=due+
report.general.dateformat=D-M-Y

report.generalcompletetoday.columns=id,due,due.countdown,priority,depends,description
report.generalcompletetoday.labels=ID,Due,Remaining,Pri,Dep,Desc
report.generalcompletetoday.filter=status:completed due:today
report.generalcompletetoday.dateformat=D-M-Y

report.work.columns=id,project,due,due.countdown,priority,urgency,depends,description
report.work.labels=ID,Project,Due,Remaining,Pri,Urgency,Dep,Desc
report.work.filter=status:pending tag:polestar agile.not:devcomplete
report.work.sort=urgency-,priority-
report.work.dateformat=D-M-Y

report.workcomplete.columns=id,project,due,priority,urgency,project,depends,tags,description
report.workcomplete.filter=status:pending tag:polestar agile:devcomplete
report.workcomplete.sort=priority-

report.workcompletetoday.columns=project,due,priority,urgency,project,depends,description,uuid
report.workcompletetoday.filter=status:completed tag:polestar due:today

report.tech.columns=id,due,priority,urgency,depends,tags,description
report.tech.filter=project:tech status:pending
report.tech.sort=due+,priority-,depends-

